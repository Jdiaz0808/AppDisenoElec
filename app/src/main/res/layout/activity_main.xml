<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/header_glass_background"
            app:titleTextColor="@android:color/white"
            app:title="Palenque Pinpoint"
            app:titleTextAppearance="@style/AppTitleStyle"
            android:layout_margin="16dp"
            app:layout_scrollFlags="scroll|enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sistema de Monitoreo"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/live_indicator_bg">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:id="@+id/liveDot"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:layout_marginEnd="6dp"
                                    android:background="@drawable/live_dot_animation" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EN VIVO"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/live_indicator_text" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Captura y envía reportes en tiempo real"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.8" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Photo Capture Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/photoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📸"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Captura de Imagen"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <!-- Photo buttons -->
                    <LinearLayout
                        android:id="@+id/buttonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/takePhotoButton"
                            style="@style/ModernGlassButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Cámara"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:icon="@drawable/ic_camera"
                            app:iconTint="@color/camera_icon_color"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/pickFromGalleryButton"
                            style="@style/ModernGlassButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Galería"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:icon="@drawable/ic_gallery"
                            app:iconTint="@color/gallery_icon_color"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Image preview -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/imagePreviewCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/image_preview_bg">

                        <ImageView
                            android:id="@+id/imagePreview"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="Vista Previa de la Imagen"
                            android:scaleType="centerCrop"
                            android:layout_margin="4dp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Clear photo button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clearPhotoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:text="Limpiar"
                        android:textColor="@color/clear_button_text"
                        android:textSize="12sp"
                        app:backgroundTint="@color/clear_button_bg"
                        app:icon="@drawable/ic_clear"
                        app:iconTint="@color/clear_button_text"
                        app:iconSize="16dp"
                        app:cornerRadius="18dp"
                        android:visibility="gone" />

                    <!-- Photo status -->
                    <TextView
                        android:id="@+id/photoStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sin imagen seleccionada"
                        android:textSize="14sp"
                        android:textColor="@color/status_text_color"
                        android:gravity="center"
                        android:alpha="0.7" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/locationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📍"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación Actual"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <!-- Location status -->
                    <TextView
                        android:id="@+id/locationStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Obteniendo ubicación..."
                        android:textSize="14sp"
                        android:textColor="@color/status_text_color"
                        android:layout_marginBottom="12dp" />

                    <!-- Update location button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/updateLocationButton"
                        style="@style/ModernGlassButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:text="Actualizar Ubicación"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_location"
                        app:iconTint="@color/location_icon_color"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Send Report Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sendCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚀"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Envío de Reporte"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <!-- Send status -->
                    <TextView
                        android:id="@+id/sendStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preparando para envío..."
                        android:textSize="14sp"
                        android:textColor="@color/status_text_color"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Server status -->
                    <TextView
                        android:id="@+id/serverStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verificando conexión..."
                        android:textSize="12sp"
                        android:textColor="@color/server_status_color"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.8" />

                    <!-- Send button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sendButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Enviar Reporte"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null"
                        android:background="@drawable/gradient_button"
                        app:cornerRadius="12dp"
                        app:elevation="8dp"
                        app:icon="@drawable/ic_send"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        app:rippleColor="@color/button_ripple" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorColor="@color/progress_color"
                app:trackColor="@color/progress_track"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Procesando..."
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>